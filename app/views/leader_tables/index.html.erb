<h1>Listing leader_tables</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leader_tables.each do |leader_table| %>
      <tr>
        <td><%= link_to 'Show', leader_table %></td>
        <td><%= link_to 'Edit', edit_leader_table_path(leader_table) %></td>
        <td><%= link_to 'Destroy', leader_table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

